<div class="show-card">
    <div>
        <slot/>
    </div>
</div>

<style>
    .show-card {
        padding: 1rem;
        background: var(--color-wb-4-90);
        border-radius: 0.5rem;
        margin-top: .5rem;
        margin-bottom: .5rem;
        outline: 1px rgba(0,0,0,.008) solid;

        display: grid;
        grid-template-rows: 0fr;
        transition: 
            grid-template-rows 500ms,
            background 500ms,
            outline 500ms;
    }

    .show-card:hover {
        grid-template-rows: 1fr;
        background: rgb(246, 246, 246);
        outline: 1px var(--color-wb-0-16) solid;
    }

    .show-card > div {
        overflow: hidden;
    }
</style>
